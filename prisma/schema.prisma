generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id              Int         @id @default(autoincrement())
  name            String
  email           String      @unique
  password        String
  image           String
  FavoritedMovies Favorited[]

  @@map("users")
}

model Favorited {
  id             Int    @id @default(autoincrement())
  userId         Int
  FavoritedId    Int
  FavoritedTitle String

  user Users @relation(fields: [userId], references: [id])

  @@map("favorited_movies")
}
